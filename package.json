{
  "name": "localizer",
  "private": true,
  "displayName": "localizeR",
  "description": "Add text to locale file",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.34.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:typescriptreact"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "Configuration for translatable",
        "properties": {
          "localizer.locale.file": {
            "type": "string",
            "default": "src/resources/language/locale/es.tsx",
            "description": "Path for locale file",
            "scope": "application"
          },
          "localizer.locale.replacer": {
            "type": "string",
            "default": "};",
            "description": "Text to find for replace",
            "scope": "application"
          },
          "localizer.locale.prefix": {
            "type": "string",
            "default": "L.",
            "description": "prefix for add translations",
            "scope": "application"
          },
          "localizer.conf.test": {
            "type": "boolean",
            "default": false,
            "description": "Just test config, ignore me please",
            "scope": "machine"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "yarn run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^3.3.1",
    "vscode": "^1.1.28",
    "tslint": "^5.12.1",
    "@types/vscode": "^1.34.0",
    "@types/node": "^10.12.21",
    "@types/mocha": "^2.2.42"
  }
}
